<!DOCTYPE html>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Dojo Message Board</h1>

    <form class="" action="/message" method="post">
      <label for="">Name:</label>
      <br>
      <input type="text" name="name" value="">
      <br>
      <label for="">Message:</label>
      <br>
      <textarea name="message" rows="8" cols="40"></textarea>
      <br>
      <br>
      <input type="submit" name="" value="Post Message">

    </form>

    <%for(var i = 0; i < msg.length;i++){%>
      <p>Name:<%=msg[i].name%></p>
      <p>Message:<%=msg[i].message%></p>

      <h1>Comment</h1>
      <%for(var j = 0; j < msg[i].comments.length;j++){%>
        <p><% var comment = msg[i].comments[j]%></p>

        <p>Name: <%= comment.name%></p>
        <p>Comment: <%= comment.comment%></p>

      <%}%>

      <form class="" action="/comments/<%=msg[i]._id%>" method="post">
        <label for="">Name:</label>
        <br>
        <br>
        <input type="text" name="name" value="">
        <br>
        <br>
        <label for="">Comment:</label>
        <br>
        <textarea name="comment" rows="8" cols="40"></textarea>
        <br>
        <br>
        <input type="submit" name="" value="Post Comment">

      </form>

    <%}%>
  </body>
</html>
